.pony 
	display: inline-block
	width 12%
	vertical-align: top
	border: 1px solid #000
	padding: 1% 2%
	margin: 1%

	img 
		display: block
		width: 100px

.block, button 
	margin: 10px

/*modal forms*/

.modal-bg 
	display: none
	position: fixed
	z-index: 1
	left: 0 
	right: 0
	top: 0 
	bottom: 0
	opacity: 0.5
	background: #000

.modal 
	position: absolute
	left 50px
	right 50px
	z-index: 2
	display none
	width: 90%
	background: #fff
	padding: 20px

.modalClose 
	position: absolute
	top: 10px
	right: 10px
	padding: 5px
	cursor: pointer
	&:active
		top: 11px